@model FoodBasket.Data.Models.Category

@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Update Page</h1>
<br />
@using (Html.BeginForm("CategoryUpdate", "Categories", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    <br />
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CategoryName)
    <br />
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.CategoryDescription)
    <br />
    @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Status)
    <br />
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>
}

