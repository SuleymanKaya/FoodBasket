@model FoodBasket.Data.Models.Food

@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Get Page</h1>
<br />
@using (Html.BeginForm("FoodUpdate", "Foods", FormMethod.Post))
{
    @Html.Label("Id")
    <br />
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control" })
    <br />
    @Html.Label("Food Name")
    <br />
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Description")
    <br />
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    <br />
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Image URL")
    <br />
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    <br />
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Category Name")
    <br />
    @*@Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ctv, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update</button>
}

